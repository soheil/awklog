  body {
    background-color: #23272A;
    filter: invert(85%) !important;
  }
  a:-webkit-any-link, a:link, a:visited, a:hover, a:active {
    /*filter: invert(80%) !important;*/
  }
  div, span, li, img, hr {
    /*filter: invert(90%) !important;*/
  }


</style>
